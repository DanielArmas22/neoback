{
  "kind": "collectionType",
  "collectionName": "challenge_conditions",
  "info": {
    "singularName": "challenge-condition",
    "pluralName": "challenge-conditions",
    "displayName": "ChallengeCondition"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "phase": {
      "type": "enumeration",
      "enum": [
        "FASE 0",
        "FASE 1",
        "FASE 2",
        "FASE REAL"
      ]
    },
    "step": {
      "type": "integer",
      "max": 1,
      "min": 0
    },
    "profit": {
      "type": "decimal"
    },
    "max_loss_per_day": {
      "type": "decimal"
    },
    "max_loss_total": {
      "type": "decimal"
    },
    "max_loss_per_trade": {
      "type": "decimal"
    },
    "leverage": {
      "type": "decimal"
    },
    "min_trading_days": {
      "type": "decimal"
    },
    "trading_period": {
      "type": "decimal"
    },
    "weekend_trading": {
      "type": "decimal"
    },
    "consistency": {
      "type": "decimal"
    },
    "challenge": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::challenge.challenge",
      "inversedBy": "challenge_condition"
    }
  }
}
